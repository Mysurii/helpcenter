<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- solids that simulate shadow !-->

    <item>
        <shape>
            <corners
                android:radius="10dp"
                android:topLeftRadius="0dp" />
            <solid android:color="#efe9f5" />
            <padding
                android:bottom="4dp"
                android:left="1dp"
                android:right="2dp"
                android:top="1dp" />
        </shape>
    </item>


    <!-- main background !-->
    <item>
        <shape>
            <corners
                android:radius="10dp"
                android:topLeftRadius="0dp" />
            <solid android:color="@color/white" />
        </shape>
    </item>


</layer-list>